            string bio = "";

            switch (i)
            {
                case 1:
                    nombre = "Juan Pérez";
                    posicion = "Director General";
                    bio = "Juan tiene más de 20 años de experiencia en la industria alimentaria y ha liderado Supermercado MVC desde sus inicios.";
                    break;
                case 2:
                    nombre = "María González";
                    posicion = "Directora de Operaciones";
                    bio = "María supervisa todas las operaciones diarias y se asegura de que nuestros clientes reciban el mejor servicio posible.";
                    break;
                case 3:
                    nombre = "Carlos Rodríguez";
                    posicion = "Jefe de Compras";
                    bio = "Carlos trabaja directamente con nuestros proveedores para asegurar que solo los mejores productos lleguen a nuestras tiendas.";
                    break;
                case 4:
                    nombre = "Ana Martínez";
                    posicion = "Directora de Marketing";
                    bio = "Ana es responsable de nuestras estrategias de marketing y comunicación con los clientes.";
                    break;
            }

